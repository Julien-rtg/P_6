{% extends 'base.html.twig' %}


{% block content %}

    <div class="container">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="has-text-centered">Inscription</h1>

        <div class="loginContainer marginLoginContainer">
            {{ form_start(registrationForm, {'attr': {'class' : 'formPadding' }}) }}
                
                <div class="columns is-multiline has-text-centered mt-5">
                    <div class="column is-12">
                        {{ form_label(registrationForm.login, 'Nom d\'utilisateur') }}
                    </div>
                    <div class="column is-12">
                        {{ form_widget(registrationForm.login, {'attr' : { 'class':'inputBottomLine'}}) }}
                    </div>
                    {% if registrationForm.login.vars['errors']|length > 0 %}
                        <div class="column is-12">
                            {% for error in registrationForm.login.vars['errors'] %}
                                <span class="tag is-danger">
                                    {{ error.message }}
                                </span>
                            {% endfor %}
                        </div>
                    {% endif %}
                    
                    
                </div>

                <div class="columns is-multiline has-text-centered">
                    <div class="column is-12">
                        {{ form_label(registrationForm.email, 'Email') }}
                    </div>
                    <div class="column is-12">
                        {{ form_widget(registrationForm.email, {'attr' : { 'class':'inputBottomLine'}}) }}
                    </div>
                    {% if registrationForm.email.vars['errors']|length > 0 %}
                        <div class="column is-12">
                            {% for error in registrationForm.email.vars['errors'] %}
                                <span class="tag is-danger">
                                    {{ error.message }}
                                </span>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <div class="columns is-multiline has-text-centered">
                    <div class="column is-12">
                        {{ form_label(registrationForm.login, 'Mot de passe') }}
                    </div>
                    <div class="column is-12">
                        {{ form_widget(registrationForm.plainPassword, {'attr' : { 'class':'inputBottomLine'}}) }}
                    </div>
                    {% if registrationForm.plainPassword.vars['errors']|length > 0 %}
                        <div class="column is-12">
                            {% for error in registrationForm.plainPassword.vars['errors'] %}
                                <span class="tag is-danger">
                                    {{ error.message }}
                                </span>
                            {% endfor %}
                        </div>
                    {% endif %}

                </div>

                <div class="columns has-text-centered">
                    <div class="column is-12">
                        <button type="submit" class="button">Cr√©er un compte</button>
                    </div>
                </div>
            {{ form_end(registrationForm) }}
        
        
        </div>
    </div>
{% endblock %}
