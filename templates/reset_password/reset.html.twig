{% extends 'base.html.twig' %}


{% block content %}
    <div class="container">
        <h1 class="has-text-centered">RÃ©initialiser votre mot de passe</h1>
        <div class="loginContainer marginLoginContainer">
            {{ form_start(resetForm, {'attr': {'class' : 'formPadding' }}) }}
                <div class="columns is-multiline has-text-centered mt-5">
                    <div class="column is-12">
                        {{ form_label(resetForm.login, 'Nom d\'utilisateur') }}
                    </div>
                    <div class="column is-12">
                        {{ form_widget(resetForm.login, {'attr' : { 'class':'inputBottomLine'}}) }}
                    </div>

                </div>
                <div class="columns is-multiline has-text-centered">
                    <div class="column is-12">
                        {{ form_label(resetForm.plainPassword, 'Mot de passe') }}
                    </div>
                    <div class="column is-12">
                        {{ form_widget(resetForm.plainPassword, {'attr' : { 'class':'inputBottomLine'}}) }}
                    </div>
                    {% if resetForm.plainPassword.vars['errors']|length > 0 %}
                        <div class="column is-12">
                            {% for error in resetForm.plainPassword.vars['errors'] %}
                                <span class="tag is-danger">
                                    {{ error.message }}
                                </span>
                            {% endfor %}
                        </div>
                    {% endif %}

                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                <div class="columns is-multiline has-text-centered">
                    <div class="column is-12">
                        <button class="button">Confirmer</button>
                    </div>
                </div>

            {{ form_end(resetForm) }}
        
        </div>

    </div>

{% endblock %}
